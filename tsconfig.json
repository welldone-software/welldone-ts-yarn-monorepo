{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ESNext"],

    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "sourceMap": true,

    "baseUrl": ".",
    "paths": {
      "@myrepo/*": ["./libs/*/src"]
    }
  }
}
